{
  "name": "bun-htmx-crud",
  "module": "src/index.ts",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "generate": "bun drizzle-kit generate",
    "migrate:dev": "bun wrangler d1 migrations apply bun-htmx-crud --local",
    "test:db:dev": "bun wrangler d1 execute bun-htmx-crud --local --command \"select * from products\";",
    "dev": "bun wrangler dev",
    "create:db": "bun wrangler d1 create bun-htmx-crud",
    "migrate": "bun wrangler d1 migrations apply bun-htmx-crud --remote",
    "test:db": "bun wrangler d1 execute bun-htmx-crud --remote --command \"select * from products\";",
    "deploy:app": "bun wrangler deploy",
    "secret:github": "bun wrangler secret put GITHUB_CLIENT_SECRET",
    "secret:google": "bun wrangler secret put GOOGLE_CLIENT_SECRET",
    "logtail:remote": "bun wrangler tail bun-htmx-crud",
    "dev:remote": "bun wrangler dev --remote",
    "rollback:app": "bun wrangler rollback",
    "delete:app": "bun wrangler delete",
    "databases": "bun wrangler d1 list",
    "update:types": "bun wrangler types",
    "introspect": "bun drizzle-kit introspect",
    "studio": "bun drizzle-kit studio"
  },
  "dependencies": {
    "@elysiajs/html": "^1.4.0",
    "drizzle-orm": "^0.44.7",
    "elysia": "^1.4.16",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "better-sqlite3": "^12.4.1",
    "bun-types": "^1.3.3",
    "drizzle-kit": "^0.31.7",
    "typed-html": "^3.0.1",
    "wrangler": "^4.47.0",
    "dotenv": "^17.2.3"
  }
}
